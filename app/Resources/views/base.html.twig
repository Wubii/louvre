<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Louvre{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image" href="{{ asset('img/logo.png') }}" />

    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">

    <script type='text/javascript' src="{{ asset('js/jquery.js') }}"></script>

  </head>  
  <body>
  <div class="container-fluid" style="padding: 0">
    <div class="row" style="margin-right: 0">
      <div role="navbar" class="mb-navbar">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-2">
          <div class=" navbar-brand">
            <p style="text-shadow: h-pos v-pos (blur) (color);">LOUVRE</p>
          </div>
        </div>
        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10" style="display: inline;">
            <a href="/"><p>Billeterie</p></a>
            <a href="/dashboard"><p>Dashboard</p></a>
        </div>
      </div>
    </div>
  </div>

  {% block body %}
  {% endblock %}
  
  {% block javascripts %}
  {% endblock %}
  
  </body>
</html>
