<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Louvre{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image" href="{{ asset('img/logo.png') }}" />

    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}" />

    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">

    <link rel="stylesheet" href="{{ asset('css/jquery-ui.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/jquery-ui.theme.min.css') }}">

  </head>  
  <body>
  <div class="container-fluid" style="padding: 0">
    <div class="row" style="margin-right: 0">
      <div role="navbar" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <a class="navbar-brand" href="#">LOUVRE</a>
          </div>
          <ul class="nav navbar-nav">
            <li>
              <a href="/">Billeterie</a>
            </li>
            <li>
              <a href="/dashboard"><p>Dashboard</p></a>
            </li>
            <li>
              <a href="/task"><p>Task</p></a>
            </li>  
          </ul>          
        </div>
      </div>
    </div>
  </div>

  {% for flashMessage in app.session.flashbag.get('success') %}

    <div class="alert alert-success" role="alert">{{ flashMessage }}</div>

  {% endfor %}

  {% for flashMessage in app.session.flashbag.get('danger') %}

    <div class="alert alert-danger" role="alert">{{ flashMessage }}</div>

  {% endfor %}

  {% block body %}
  {% endblock %}

  <footer class="footer navbar-inverse">
    <div class="container-fluid">
      <p>lskdgsldkgslgn</p>
    </div>
  </footer>

  <script type='text/javascript' src="{{ asset('js/jquery.js') }}"></script>
  <script type='text/javascript' src="{{ asset('js/jquery-ui.min.js') }}"></script>
  
  {% block javascript %}
  
  {% endblock %}
  
  </body>
</html>
