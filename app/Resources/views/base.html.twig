<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Louvre{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image" href="{{ asset('img/logo.png') }}" />

    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}" />

    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">

    <link rel="stylesheet" href="{{ asset('css/jquery-ui.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/jquery-ui.theme.min.css') }}">

  </head>  
  <body>
  <div class="container-fluid" style="padding: 0">
    <div class="row" style="margin-right: 0">
      <div role="navbar" class="mb-navbar">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-2">
          <div class=" navbar-brand">
            <p style="text-shadow: h-pos v-pos (blur) (color);">LOUVRE</p>
          </div>
        </div>
        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
          <ul>
            <li>
              <a href="/">Billeterie</a>
            </li>
            <li>
              <a href="/dashboard"><p>Dashboard</p></a>
            </li>
            <li>
              <a href="/task"><p>Task</p></a>
            </li>  
          </ul>          
        </div>
      </div>
    </div>
  </div>

  {% for flashMessage in app.session.flashbag.get('success') %}

    <div class="alert alert-success" role="alert">{{ flashMessage }}</div>

  {% endfor %}

  {% for flashMessage in app.session.flashbag.get('danger') %}

    <div class="alert alert-danger" role="alert">{{ flashMessage }}</div>

  {% endfor %}

  {% block body %}
  {% endblock %}

  <script type='text/javascript' src="{{ asset('js/jquery.js') }}"></script>
  <script type='text/javascript' src="{{ asset('js/jquery-ui.min.js') }}"></script>
  
  {% block javascript %}
  
  {% endblock %}
  
  </body>
</html>
